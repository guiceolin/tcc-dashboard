.project-box
  %p.header
    Mensagens de #{current_user}
  %p.links
    = link_to image_tag('icons/email_add.png'), new_message_path
  %h2 
    Mensagens recebidas
  %ul
    - @deliveries.each do |delivery|
      %li{:class => delivery.read ? 'read' : 'unread'}
        %p.desc
          = link_to delivery.message.subject, message_path(delivery.message)
        %p.links
          = link_to image_tag('icons/email_open.png'), read_message_path(delivery.message), :method => :put if delivery.unread?
  %h2
    Mensagens enviadas
  %ul
    - @sent_messages.each do |msg|
      %li
        %p.desc
          =link_to msg.subject, message_path(msg)

