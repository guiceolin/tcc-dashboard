= simple_form_for(@project) do |f|
  %fieldset
    -if @project.new_record?
      .clearfix{:class => error_for(@project, :name)}
        = f.label :name, 'Nome'
        .input
          =f.text_field :name, :class => 'xxlarge'
          =error_message_for @project, :name
    .clearfix{:class => error_for(@project,:description)}
      = f.label :description, 'Descrição'
      .input
        =f.text_area :description, :class => "xxlarge"
        =error_message_for @project, :description

    .row
      .span3.offset12
        = f.button :submit, :class => 'btn success'

